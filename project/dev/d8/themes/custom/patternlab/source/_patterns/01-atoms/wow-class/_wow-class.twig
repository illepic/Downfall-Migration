{#
Found in wow_classes, ie
{
  class_id: 1,
  elaborate: true|false
}
Depends on folder structure in images folder, ie
images/wow-class/elaborate|simple/class-name.png
#}

{# If class_name is passed in, use it. Otherwise, look it up. Clean it. #}
{% set class_name = (class_name ? class_name : wow_classes[class_id].name)|lower|replace(' ', '-') %}
{% set image_variation = elaborate ? 'elaborate' : 'simple' %}

<img
  src="{{ paths.images }}/wow-class/{{ image_variation }}/{{ class_name }}.png"
  alt="{{ class_name }}"
  class="img-responsive wow-class wow-class-img--{{ image_variation }}"
/>
