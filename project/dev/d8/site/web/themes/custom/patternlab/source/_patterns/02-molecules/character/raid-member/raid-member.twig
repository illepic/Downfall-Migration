{#
Full WoW Character object, merged with a Drupal User object
{
  "character": {
    "class": 2
    "spec": {
      "icon": "path/to/icon",
      "role": "TANK/DPS/HEAL"
    }
  }
}

NOTE: This only looks good on a dark bg.
#}

<div class="character raid-member">
  <div class="raid-member__graphics">
    <div class="raid-member__class">
      {% include "@atoms/wow-class/wow-class-elaborate.twig" with { 'class_id': character.class } %}
    </div>
    {% if character.user %}
    <div class="raid-member__df-avatar">
      <a href="{{ character.user.url }}">
        {% include "@atoms/users/user-avatar-hover.twig" with { 'user': character.user } %}
      </a>
    </div>
    {% endif %}
  </div>

  <div class="raid-member__details">
    <div class="raid-member__details-left">
      <div class="raid-member__wow-avatar">
        {% include "@atoms/wow-avatar/wow-avatar.twig" with { 'character': character } %}
      </div>
    </div>
    <div class="raid-member__details-right">
      <div class="raid-member__spec" data-toggle="tooltip" data-placement="top" title="{{ character.spec.name }}">
        {% include "@atoms/wow-spec/wow-spec.twig" with { 'spec': character.spec } %}
        <div class="raid-member__role">
          {% include "@atoms/wow-role/wow-role.twig" with { 'role': character.spec.role } %}
        </div>
      </div>
      <p class="text-center raid-member__name wow-class wow-class--{{ wow_classes[character.class].name|replace(' ', '-')|lower }}">{{ character.name }}</p>
    </div>
  </div>
</div>
