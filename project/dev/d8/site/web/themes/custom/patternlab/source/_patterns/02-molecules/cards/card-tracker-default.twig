<div class="card card-plain card-blog card-tracker {% if card_vertical %}card--vertical{% endif %}">

  {% if img %}
  <div class="card-tracker__left">
    <div class="card-image">
        <a href="{{ url }}">
          <div class="hidden-xs">{% include "@atoms/images/image-thumb.twig" with { 'img': img } %}</div>
          <div class="visible-xs-block">{% include "@atoms/images/image-landscape-medium.twig" with { 'img': img } %}</div>
          {% if type == 'video' %}
            {% include "@atoms/images/play.twig" %}
          {% endif %}
        </a>
      </div>
    </div>
  {% endif %}

  {% if type == 'event' %}
    <div class="card-tracker__left content-info content text-center card-tracker__event-block">

      <h3 class="card-title">Saturday</h3>
      <h4 class="card-title">9/12 </h4>
      <h4 class="card-title">@ 9:30pm PST</h4>
      <a href="#" class="btn btn-white btn-round">Sign Up</a>

    </div>
  {% endif %}

  <div class="card-tracker__right">
    <h6 class="category text-info">
      <span><i class="material-icons card-tracker__type">{{ attribute(icons, type) }}</i> {{ type }} | </span>
      <span class="card__tags">{{ tags|join(', ') }}</span>
      <span class="card-tracker__timestamp">{{ timestamp|date('m/d/Y \\@ g:i a') }}</span>
    </h6>
    <h4 class="card-title">
      {% set url = url ? url : link['pages-node'] %}
      <a href="{{ url }}"> {{ title|escape }}</a>
    </h4>

    <p class="card-description">{{ teaser }}</p>

    <div class="footer">
      <div class="author">
        <a href="#">
          <img src="{{ img_path(user.avatar.img.src, is_pl) }}" alt="..." class="avatar img-raised">
          <span>{{ user.name }}</span>
        </a>
      </div>
      <div class="stats">
        {% if comments %}
          <span><i class="material-icons">comment</i> {{ comments.count }} comments</span>
          {% if comments.new %}<span class="label label-success">New</span>{% endif %} |
        {% endif %}
        <span><i class="material-icons">timeline</i> 1,291 views</span>
      </div>
    </div>
  </div>

</div> <!-- /.card-tracker -->
