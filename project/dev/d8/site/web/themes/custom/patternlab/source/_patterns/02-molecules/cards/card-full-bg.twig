<div class="card card-raised card-background" style="background-image: url('{{ img_path(img.landscape_medium.src, is_pl) }}')">
  <div class="content">
    <h6 class="category text-info">{{ tags|join(', ') }}</h6>
    <a href="{{ url }}">
      <h3 class="card-title">{{ title }}</h3>
    </a>
    <p class="card-description">{{ teaser }}</p>

    {% include "@atoms/buttons/button.twig" with {
      'button_icon': 'post',
      'button_round': true,
      'button_text': 'Read More'|t
    } %}

  </div>
</div>
