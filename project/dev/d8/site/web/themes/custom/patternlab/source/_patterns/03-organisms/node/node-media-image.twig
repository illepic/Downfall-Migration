{% embed '@organisms/node/_node.twig' with {
  'node': node|merge({ 'layout': { 'top': true, 'bottom': true } })
}%}

  {% block node_top %}
    {% include '@atoms/images/image-landscape-full.twig' with {
      img: {
        landscape_full: {
         src: node.fields.media_top.src,
         alt: 'Image representing the title of this image'|t,
        }
      },
    } %}
  {% endblock %}

  {% block node_bottom %}
    <div class="row">
      {% for thumb in node.thumbs %}
        <div class="col-sm-2 thumb">
          {% include "@molecules/thumbs/thumbnail-link.twig" with { 'thumb': thumb } %}
        </div>
      {% endfor %}
    </div>
  {% endblock %}

{% endembed %}
