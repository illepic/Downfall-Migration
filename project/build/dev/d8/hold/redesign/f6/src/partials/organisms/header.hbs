  {{> top-bar}}

  <div class="header-hero__inner">

    <div class="row">
      <div class="large-6 columns header-hero__content">
        <h1 class="header-hero__title">{{title}}</h1>
        <p class="header-hero__subtitle">{{{intro}}}</p>
        {{#each links}}{{> button}}{{/each}}
      </div>

    </div>
    <div class="row test-ornaments">
      <div class="large-12 columns">
        <div class="df-ornaments"></div>
      </div>
    </div>
