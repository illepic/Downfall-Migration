<div class="comments__wrapper">
  <h4 class="comments__wrapper-count-title">33 comments</h4>
  <div class="comments">
    {{#each comments}}
      {{> comment}}
    {{/each}}
  </div>

  {{> df-hr}}

  <h4 class="comments__wrapper-form-title">Add new comment</h4>
  <label>
    Comments require account.
    <textarea rows="5" placeholder="See text formats for formatting options"></textarea>
  </label>
  <a class="button">Save</a>
  <a class="button">Preview</a>
</div>