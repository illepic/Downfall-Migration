<div class="{{ name }} section sidebar-layout">
  <div class="container">
    <div class="row">
      <div class="{% if sidebar_sidebar %}col-sm-8{% else %}col-sm-12{% endif %}">
        {% set default_sidebar_content %}
          <h1>Sidebar content area</h1>
        {% endblock %}
        {{ sidebar_content|default(default_sidebar_content)|raw }}
      </div>
      {% if sidebar_sidebar %}
        <div class="col-sm-4">
          {{ sidebar_sidebar|raw }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
