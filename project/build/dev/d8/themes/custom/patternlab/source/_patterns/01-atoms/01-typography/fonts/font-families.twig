{% for item in items %}
  <div>
    <div style="font-family: {{ item.value }};">{{ item.value }}</div>
    <div>
      <pre><code>
.class {
  font-family: {{ item.name }};
}
      </code></pre>
    </div>

    <h6>Normal</h6>
    <div style="font-family: {{ item.value }}; font-size: 2em; font-weight: 400; line-height: 1.6em; ">{{ excerpt.short }}</div>

    <h6>Bold</h6>
    <div style="font-family: {{ item.value }}; font-size: 2em; font-weight: 700; line-height: 1.6em; ">{{ excerpt.short }}</div>

    <h6>light</h6>
    <div style="font-family: {{ item.value }}; font-size: 2em; font-weight: 300; line-height: 1.6em; ">{{ excerpt.short }}</div>

  </div>
  <hr>
{% endfor %}
