<div class="node-full">

  <div class="node-full__info row">
    <div class="col-md-8 col-md-offset-2 node-top-8">

      <div class="card card-plain">
        <h1 class="hidden">{{ node.title }}</h1>
        <div class="footer">
          <div class="author">
            <a href="#">
              <img src="../../../../images/avatars/saedo.png" alt="..." class="avatar img-raised">
              <span>Saedo</span>
            </a>
          </div>
          <div class="stats">
            <a href="#comments">{{ node.comments.count }} comments</a> |
            <span> {{ node.timestamp|date('l, F j, Y \\a\\t g:i a') }}</span>
          </div>
        </div>
      </div> <!-- /.node-full__info -->

    </div> <!-- /.col-md-8.col-md-offset-2 -->
  </div> <!-- /.node-full__info.row -->

  {% if node.layout.top %}
    <div class="node-full__top row text-center">
      <div class="col-sm-12">

        {% block node_top %}
          {# Include any atoms/image-landscape-full or atoms/video here #}
        {% endblock %}

      </div> <!-- /.col-sm-12 -->
    </div> <!-- /.node-full__top.row -->
  {% endif %}

  <div class="node-full__body row">
    <div class="col-md-8 col-md-offset-2">
      {{ node.body|join }}
    </div>
  </div>

  {% if node.layout.bottom %}
    <div class="node-full__bottom row">
      <div class="row">
        <div class="col-sm-12">

          {% block node_bottom %}
            {# Anything here, usually image thumbs #}
          {% endblock %}

        </div>
      </div>
    </div>
  {% endif %}

    <div class="node-full__supplemental row">
      <div class="col-md-8 col-md-offset-2">

        <div class="node-full__tags">
          {{ 'Tags'|t }}:
          <span class="label label-info">Raids</span>
          <span class="label label-default">Priest</span>
          <span class="label label-rose">Event</span>
        </div>

        <div class="node-full__actions">
          {% include "@molecules/navs/actions.twig" %}
        </div>

        <div id="comments" class="node-full__comments">
          {% include "@organisms/sections/comments.twig" %}
        </div>

      </div>
    </div>

</div> <!-- /.node-full -->
