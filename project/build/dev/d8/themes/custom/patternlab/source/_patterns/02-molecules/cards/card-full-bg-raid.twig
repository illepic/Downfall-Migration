<div class="card card-raised card-background raid-card" style="background-image: url('{{ img_path(img.landscape_medium.src, is_pl) }}')">
  <div class="content">
    <div class="raid-card__icon">
      <img src="{{ paths.wow_icon }}/{{ icon }}.jpg" class="raid-card__icon-img img-circle img-raised"/>
    </div>
    <h6 class="category text-info">{{ info }}</h6>
    <a href="{{ url }}">
      <h3 class="card-title">{{ title }}</h3>
    </a>

    {% if latest %}
    <p class="card-description">
      <strong>{{ 'Latest'|t }}:</strong><br>
      <i class="material-icons raid-card__latest-icon">{{ attribute(icons, latest.type)|default('post') }}</i> <span>{{ latest.title }}</span>
    </p>
    {% endif %}

    {% include "@atoms/buttons/button.twig" with {
      'button_color': (joined) ? 'default',
      'button_icon': (joined) ? 'check' : 'add',
      'button_round': true,
      'button_text': (joined) ? 'Joined!'|t : 'Join'|t
    } %}
    <div class="clearfix"></div>

    <a href="#pablo" class="btn btn-white btn-simple">
      <i class="material-icons">group</i> {{ member_count }}
    </a>
    <a href="#pablo" class="btn btn-white btn-simple">
      <i class="material-icons">watch_later</i> Thing
    </a>

  </div>
</div>
