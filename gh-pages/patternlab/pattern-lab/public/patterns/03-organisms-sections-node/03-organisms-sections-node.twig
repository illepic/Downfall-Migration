&lt;div class=&quot;row node node-full section-text&quot;&gt;
  &lt;div class=&quot;col-md-10 col-md-offset-1&quot;&gt;

    &lt;div class=&quot;card card-plain node-full__info&quot;&gt;
      &lt;div class=&quot;footer&quot;&gt;
        &lt;div class=&quot;author&quot;&gt;
          &lt;a href=&quot;#&quot;&gt;
            &lt;img src=&quot;../../../../images/avatars/picture-44.jpg&quot; alt=&quot;...&quot; class=&quot;avatar img-raised&quot;&gt;
            &lt;span&gt;Saedo&lt;/span&gt;
          &lt;/a&gt;
        &lt;/div&gt;
        &lt;div class=&quot;stats&quot;&gt;
          &lt;a href=&quot;#comments&quot;&gt;{{ comments.count }} comments&lt;/a&gt; |
