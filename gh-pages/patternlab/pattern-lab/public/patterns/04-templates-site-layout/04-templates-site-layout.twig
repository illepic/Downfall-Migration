{% include &quot;@organisms/site/site-nav/site-nav.twig&quot; %}

{% include &quot;@molecules/headers/header.twig&quot; with header %}

{% set content_cols = sidebar ? 8 : 12 %}

&lt;div class=&quot;main main-raised&quot;&gt;
  &lt;div class=&quot;container&quot;&gt;

    {% if banner %}
    &lt;div class=&quot;row&quot;&gt;
      &lt;div class=&quot;col-sm-12&quot;&gt;
        &lt;div class=&quot;section banner text-center&quot;&gt;
          &lt;img class=&quot;banner__image img-rounded img-responsive img-raised&quot; src=&quot;{{ banner.img }}&quot;&gt;
          &lt;p class=&quot;banner__caption&quot;&gt;{{ banner.caption }}&lt;/p&gt;
        &lt;/div&gt;
      &lt;/div&gt;
    &lt;/div&gt;
    {% endif %}

    &lt;div class=&quot;row&quot;&gt;
      &lt;div class=&quot;col-sm-{{ content_cols }}&quot;&gt;
        &lt;div class=&quot;section&quot;&gt;
          {% block content %}
            &lt;h2&gt;Site Content Here&lt;/h2&gt;
          {% endblock %}
        &lt;/div&gt;
      &lt;/div&gt;
      {% if sidebar %}
      &lt;div class=&quot;col-sm-4&quot;&gt;
        &lt;div class=&quot;section&quot;&gt;
          {% block sidebar %}
            &lt;h1&gt;Sidebar content here&lt;/h1&gt;
          {% endblock %}
        &lt;/div&gt;
      &lt;/div&gt;
      {% endif %}
    &lt;/div&gt; &lt;!-- /.row --&gt;
  &lt;/div&gt; &lt;!-- /.container --&gt;
&lt;/div&gt; &lt;!-- /.main --&gt;

&lt;div class=&quot;container subsection&quot;&gt;
 &lt;div class=&quot;section&quot;&gt;
   {% block sub %}
     &lt;div class=&quot;row&quot;&gt;
      &lt;div class=&quot;col-sm-12&quot;&gt;
        &lt;h2&gt;Sub section&lt;/h2&gt;
        &lt;p&gt;sub section&lt;/p&gt;
      &lt;/div&gt;
    &lt;/div&gt;
   {% endblock %}
 &lt;/div&gt;
&lt;/div&gt;

{% include &quot;@organisms/site/site-footer/site-footer.twig&quot; %}
